Tic Tac Toe
<head>
</head>


<body>
  <table>
    <tr>
      <td data-coord='0-0'><%= @board.grid[0][0]%></td>
      <td data-coord='0-1'><%= @board.grid[0][1]%></td>
      <td data-coord='0-2'><%= @board.grid[0][2]%></td>
    </tr>
    <tr>
      <td data-coord='1-0'><%= @board.grid[1][0]%></td>
      <td data-coord='1-1'><%= @board.grid[1][1]%></td>
      <td data-coord='1-2'><%= @board.grid[1][2]%></td>
    </tr>
    <tr>
      <td data-coord='2-0'><%= @board.grid[2][0]%></td>
      <td data-coord='2-1'><%= @board.grid[2][1]%></td>
      <td data-coord='2-2'><%= @board.grid[2][2]%></td>
    </tr>
  </table>
  <a href="/">New Game?</a>
</body>


<script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>

<script>
  $(function(){
    $('td').click(function(){ 
      var self = $(this)
      $.ajax({
        method: 'POST',
        url: "/place",
        success: function(data){
          self.text('x');
        }
      });
    });
  })
  
</script>